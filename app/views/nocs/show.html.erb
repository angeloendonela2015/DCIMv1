<p id="notice" value="<%= notice %>"></p>

<div class="container mt-5 pt-5">
  <div class="col-sm-12">
    <div class="list-group">
      <div class="list-group-item list-group-item-action active">
        <div class="row">
          <div class="col-12">
            <h1>
              <i class="fa fa-solid fa-server f-2" style="color:#fff;""></i>
              Network Operation Center
            </h1>
          </div>
        </div>
      </div>
      <div class="list-group-item bg-dark bg-gradient text-light">
        <div class="row">
          <div class="col-6 border-end">
            <div><%= @noc.sensorename %></div>
            <div><%= @noc.oid %></div>
          </div>
          <div class="col-6">
            <div><%= @noc.ipname %></div>
            <div><%= @noc.ipaddress %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-3">
    <%= link_to 'Edit', edit_noc_path(@noc), class:"btn btn-outline-secondary text-light" %>
    <%= link_to 'Back', nocs_path, class:"btn btn-outline-secondary text-light" %>
  </div>
</div>
<script type="text/javascript">
  var noc = document.getElementById("notice").getAttribute("value");
  if (noc === "Noc was successfully created."){
    sweetAlert(noc);
  } else if (noc == "Noc was successfully updated.") {
    sweetAlert(noc);
  }
</script>
