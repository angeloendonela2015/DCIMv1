<div class="container-fluid p-5">

  <div id="notice" value="<%= notice %>"></div>
  
  <div class="row p-5">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-text text-white">
            <strong>Network Mapping</strong>
          </h5>
        </div>
        <table class="table table-borderless ">
          <tbody>
            <tr>
              <th scope="row">
                <p class="card-text text-white fs-6"> <%= @echoName %> </p>
              </th>
              <th scope="row">
                <p class="card-text text-white fs-6">
                  <strong>IP:</strong>
                  <%= @echoIP %>
                </p>
              </th>
              <th scope="row">
                <p class="card-text fs-6"><%= @rttResult %> ms</p>
              </th>
              <th scope="row">
                <p class="card-text fs-6">
                  <i class="fa fa-circle"></i> <%= @echoStatus %>
                </p>
              </th>
            </tr>
          </tbody>
        </table>
        <div id="mynetwork" style="height:30rem;"></div>
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
        <%= link_to 'Edit', edit_ssm_path(@ssm), class:"btn btn-primary btn-sm" %>
        <%= link_to 'Back', ssms_path, class:"btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>
