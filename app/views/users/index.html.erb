<div class="row mt-5 container-fluid">
  
  <p id="notice"><%= notice %><%= @include %></p>
  
  <div class="row">
  <div class="col-sm-3">
    <div class="card p-2">
      <div class="card-body bg-dark bg-gradient text-light">
        <h5 class="card-title text-light "><i class="fa fa-solid fa-user"> </i> <%= current_user.firstname %> <%= current_user.lastname %></h5>
        <hr>
        <%= link_to @displaylink, title: "Edit Display" do %>
        <div class="row text-center">
          <div class="col-12 mt-52 p-2">
            <h4><%= @displaytitle %></h4>
            <h6><%= @displaysubtitle %></h6>
          </div>
          <div class="col-12">
            <%= image_tag url_for(@displaylogo), class:"img-fluid rounded mx-auto d-block", style:"width:auto; height:auto;" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="card">
      <div class="card-body bg-dark bg-gradient text-light ">
        <div class="container">
          <div class="row">
            <div class="col-6">

            </div>
            <div class="col-6">
              <%= form_tag ssms_path, :method => "GET" do %>
                <div class="input-group input-group-sm mb-3">
                  <%= text_field_tag :search, params[:search], class:"form-control", placeholder:"Search Server Name" %>
                  <%= submit_tag "Search", class:"btn btn-outline-secondary" do %>
                    <i class="fa fa-solid fa-search"></i>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

          <div class="table-responsive">
            <table class="table table-dark table-hover" style="border-radius:25px;">
              <thead>
                <tr>
                  <th>Firstname</th>
                  <th>Middlename</th>
                  <th>Lastname</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                <tr>
                  <td><%= user.firstname %></td>
                  <td><%= user.middlename %></td>
                  <td><%= user.lastname %></td>
                  <td><%= link_to '', user, class:"fa fa-solid fa-arrow-right", title:"Show" %></td>
                  <td><%= link_to '', edit_user_path(user), class:"fa fa-solid fa-edit", title:"Edit" %></td>
                  <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-solid fa-trash", title:"Delete" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <button class="btn-9">
          <%= link_to new_user_path :class=>"btn1" do %>ADD NEW USER<% end %>
        </button>
      </div>
    </div>
  </div>
</div>
</div>
