          Logout
        <%end%>
      </li>
    </ul>
  </div>
</nav>

<div class="container-fluid">
  <div class="sidebar" id="sidebar">
    <ul>
      <li>
        <%= link_to root_path do %>
        <i class="fa fa-solid fa-home pr-5"></i>
          <small style="margin-left:20px;" class="fs-6">Dashboard</small>
        <% end %>
      </li>
      <li>
        <%= link_to nocs_path do %>
          <i class="fa fa-solid fa-server pr-5"></i>
          <small style="margin-left:20px;" class="fs-6">NOC</small>
        <% end %>
      </li>
      <li>
        <%= link_to snmpdevices_path do %>
          <i class="fa fa- fa-plug pr-5"></i>
          <small style="margin-left:20px;" class="fs-6">MiniBoot</small>
        <% end %>
      </li>
      <li>
        <%= link_to ssms_path do %>
        <i class="fa fa-solid fa-sitemap pr-5"></i>
          <small style="margin-left:20px;" class="fs-6">Switches</small>
        <% end %>
      </li>
      <li>
        <a href="<%= @accrossLink %>" target="_blank">
          <i class="fa fa-link fa-solid pr-5"></i>
          <small style="margin-left:20px;" class="fs-6"> Across </small>
        </a>
      </li>
    </ul>
  </div>

  <div class="col p-5 mt-5 mx-auto">
    <div id="notice"><%= notice %></div>

    <ul class="list-group">
      <li href="#" class="list-group-item list-group-item-action active">
        MiniBoot Device
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="col-sm-4">
          <p> <strong>Device name:</strong> </p>
        </div>
        <div class="col-sm-4">
          <%= @snmpdevice.device_name %>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="col-sm-4">
          <p> <strong>IP:</strong></p>
        </div>
        <div class="col-sm-4">
          <a href="http://<%= @snmpdevice.device_ip %>" target="_blank" class="btn btn-primary btn-sm"><%= @snmpdevice.device_ip %></a>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="col-sm-4">
          <p><strong>Community type:</strong></p>
        </div>
        <div class="col-sm-4">
          <%= @snmpdevice.community_type %>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="col-sm-3">
          <p>
            <small>MiniBoot outlet: </small>
            <strong><%= @outputAll %></strong>
          </p>
        </div>
        <div class="col-sm-3">
          <p>
            <small>Status: </small>
            <strong class="<%= @intRes %>"><%= @intRes %></strong>
          </p>
        </div>
        <div class="col-sm-3">
          <p>
            <small>Output: </small>
            <strong class="<%= @status1 %>"><%= @TotalStat %></strong>
            -
            <strong><%= @SubTotal %></strong>
          </p>
        </div>

        <span class="badge badge-primary badge-pill">1</span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center <%= @inActive %>">
        <div class="col-sm-3">
          <p><small><%= @oidName1 %>: </small><strong class="<%= @status1 %>"><%= @status1 %></strong></p>
        </div>
        <div class="col-sm-3">
          <p><small><%= @oidName2 %>: </small><strong class="<%= @status2 %>"><%= @status2 %></strong></p>
        </div>
        <div class="col-sm-3">
          <p><small><%= @oidName3 %>: </small><strong class="<%= @status3 %>"><%= @status3 %></strong></p>
        </div>
        <div class="col-sm-3">
          <p><small><%= @oidName4 %>: </small><strong class="<%= @status4 %>"><%= @status4 %></strong></p>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center <%= @divHide %> <%= @inActive %>">
        <div class="col-sm-3">
          <p><small><%= @oidName5 %>: </small><strong class="<%= @status5 %>"><%= @status5 %></strong></p>
        </div>
        <div class="col-sm-3">
          <p><small><%= @oidName6 %>: </small><strong class="<%= @status6 %>"><%= @status6 %></strong></p>
        </div>
        <div class="col-sm-3">
          <p><small><%= @oidName7 %>: </small><strong class="<%= @status7 %>"><%= @status7 %></strong></p>
        </div>
        <div class="col-sm-3">
          <p><small><%= @oidName8 %>: </small><strong class="<%= @status8 %>"><%= @status8 %></strong></p>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to 'Edit', edit_snmpdevice_path(@snmpdevice), class:"btn btn-primary btn-sm" %>
        <%= link_to 'Back', snmpdevices_path, class:"btn btn-secondary btn-sm" %>
      </li>
    </ul>
  </div>
</div>
